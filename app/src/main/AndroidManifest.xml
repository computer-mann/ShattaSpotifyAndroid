<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nunoocorp.shattaspotify" >

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        >
        <activity
            android:name=".ui.Activities.MainActivity"
            android:theme="@style/Theme.MainActivityStyle.NoActionBar"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.Activities.LoginActivity"
            android:exported="false"
            android:label="Login"
            android:parentActivityName=".ui.Activities.MainActivity"
            android:theme="@style/Theme.ShattaSpotifyLoginStyle" />
        <activity
            android:name=".ui.Activities.FirstLaunchActivity"
            android:exported="false"
            android:label="First Page"
            android:theme="@style/Theme.FirstActivityStyle.NoActionBar" />

    </application>

</manifest>